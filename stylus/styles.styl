screen-S = 600px
screen-M = 960px
screen-L = 1198px
bp(name)
  if (name == 'sm')
    @media only screen and (max-width screen-S)
      {block}
  else if (name == 'md')
    @media only screen and (max-width screen-M)
      {block}
  else if (name == 'lg')
    @media only screen and (max-width screen-L)
      {block}
  else
    @media only screen and (max-width name)
      {block}
header
  height 10vh
  border-bottom 1px solid #000
  background #eee
.main
  display flex
  box-sizing border-box
  margin 0 auto
  min-height 80vh
  max-width 1280px
  width 100%
  border 1px solid #000
  border-top none
  border-bottom none
  +bp(md)
    flex-direction column
    border none
  nav
    padding 10px
    width 10%
    background #f6e58d
    +bp(md)
      order 2
      min-height 10vh
      min-height 10vh
      width 100%
      border-top 1px solid #000
  main
    padding 10px
    width 80%
    border-right 1px solid #000
    border-left 1px solid #000
    +bp(md)
      order 1
      min-height 60vh
      width 100%
      border none
  aside
    padding 10px
    width 10%
    background #ffbe76
    +bp(md)
      order 3
      min-height 10vh
      width 100%
      border-top 1px solid #000
footer
  height 10vh
  border-top 1px solid #000
  background #eee